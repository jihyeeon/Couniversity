<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.delivery.DeliveryFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="597dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="0sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/delivery_allrequests"
                android:layout_width="108dp"
                android:layout_height="33dp"
                android:layout_margin="15dp"
                android:background="@drawable/bg_custom"
                android:gravity="center"
                android:text="All Requests"
                android:textColor="@color/color1"
                android:textSize="15dp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/request_search"
                android:layout_width="380dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <ListView
                android:id="@+id/list_allrequests"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/delivery_myrequests"
                    android:layout_width="113dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_custom2"
                    android:gravity="center"
                    android:text="My Requests"
                    android:textColor="@color/color2"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/delivery_requestDelivery"
                    android:layout_width="126dp"
                    android:layout_height="33dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/delivery_myrequests"
                    android:background="@drawable/bg_custom_reverse"
                    android:gravity="center"
                    android:text="Request Delivery"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ListView
                android:id="@+id/list_myrequests"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>