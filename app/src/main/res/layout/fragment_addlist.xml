<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AddlistFragment"
    android:background="@color/white">


    <ScrollView
        android:layout_width="410dp"
        android:layout_height="597dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="0sp"/>

                <Button
                    android:id="@+id/add_back"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="Go Back"
                    android:layout_margin="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_custom_gray"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/add_list"
                    android:layout_width="143dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/bg_custom2"
                    android:gravity="center"
                    android:layout_toRightOf="@id/add_back"
                    android:text="Add work to do"
                    android:textColor="@color/color2"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/add_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content : "
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_below="@id/add_list"/>
                <EditText
                    android:id="@+id/add_contentbox"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_below="@id/add_content"/>

            </RelativeLayout>

            <Button
                android:id="@+id/upload_list"
                android:layout_width="148dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_custom_reverse"
                android:gravity="center"
                android:text="Upload new work"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>