<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/text_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="0sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="Modify My Information"
                android:textColor="@color/color1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ListView
                android:id="@+id/listview_modify"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/bg_custom"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


            <Button
                android:id="@+id/btn_modify"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Modify Information"
                android:textColor="#ffffff"
                android:background="@drawable/bg_custom2_reverse"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="Purchase Coupon"
                android:textColor="@color/color2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!--
            <ListView
                android:id="@+id/purchase"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom2"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
                -->

            <Button
                android:id="@+id/btn_purchase"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Purchase Coupon"
                android:textColor="#ffffff"
                android:background="@drawable/bg_custom_reverse"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>